<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#246135"

app:layout_behavior="@string/appbar_scrolling_view_behavior">


<TextView
    android:id="@+id/textWinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimaryDark"
    android:text="HAS GANADO!"
    android:textSize="50dp"
    android:textColor="#E3E3E3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.15" />

<TextView
    android:id="@+id/textPointsWinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimaryDark"
    android:text="Tus puntos: \nPuntos rival: "
    android:textSize="40dp"
    android:textColor="#E3E3E3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.4" />


<Button
    android:id="@+id/buttonWinNewGame"
    android:layout_width="0px"
    android:layout_height="0px"
    app:layout_constraintHeight_percent="0.20"
    app:layout_constraintWidth_percent="0.40"
    android:text="Volver a jugar"
    android:contentDescription="Volver a jugar"
    android:textSize="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.1"
    app:layout_constraintVertical_bias="0.90" />
<Button
    android:id="@+id/buttonWinBackToMain"
    android:layout_width="0px"
    android:layout_height="0px"
    app:layout_constraintHeight_percent="0.20"
    app:layout_constraintWidth_percent="0.40"
    android:text="Pantalla principal"
    android:contentDescription="Pantalla principal"
    android:textSize="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.9"
    app:layout_constraintVertical_bias="0.90" />
</android.support.constraint.ConstraintLayout>